<UserControl x:Class="PraProjekt.ObavijestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PraProjekt"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="550">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Gray" Background="White" BorderThickness="2px" Grid.RowSpan="3" CornerRadius="10"></Border>

        <Label Margin="0" Padding="10 0" x:Name="lblImeKolegija">vava</Label>
        
        <Viewbox Grid.Row="1" HorizontalAlignment="Left">
            <Label Margin="0" Padding="10 0" x:Name="lblTitle" Grid.Row="1">baba</Label>
        </Viewbox>

        <ScrollViewer Grid.Row="2">
            <TextBlock x:Name="tbContent"/>
        </ScrollViewer>
    </Grid>
</UserControl>
